# Set default values for all following accounts.
defaults
auth           on
tls            on
tls_trust_file /etc/ssl/certs/ca-certificates.crt
logfile        ~/.msmtp.log


account gmail
host smtp.gmail.com
port 587
from root@home.server
user {{ lookup('env','HOMELAB_SMTP_GMAIL_USER') }}
password {{ lookup('env','HOMELAB_SMTP_GMAIL_PASS') }}

account fastmail
host smtp.fastmail.com
port 587
from root@home.server
user {{ lookup('env','HOMELAB_SMTP_FASTMAIL_USER') }}
password {{ lookup('env','HOMELAB_SMTP_FASTMAIL_PASS') }}

# Set a default account
account default : fastmail